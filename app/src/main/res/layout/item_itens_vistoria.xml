<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewNomeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do item"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewObservacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observação"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewNomeVistoriador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do vistoriador"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textSize="16sp" />
</LinearLayout>
