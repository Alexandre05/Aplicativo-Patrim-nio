<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="Atividades.CadastrarItens">

        <HorizontalScrollView
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageCada1"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/camera"
                    app:civ_border_color="#FF000000" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localização do Item:"
            android:textSize="18sp"
            android:textColor="#1C1C1C"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custonnoecao"
            android:ems="10"
            android:hint="Nome Item"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custonnoecao"
            android:ems="10"
            android:inputType="number"
            android:padding="10dp"
            android:hint="Nº Placa"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custonnoecao"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:hint="Observações"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editNomeRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custonnoecao"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:hint="Nome"
            android:textSize="16sp" />

        <EditText
            android:visibility="gone"
            android:id="@+id/fone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custonnoecao"
            android:inputType="datetime"
            android:padding="10dp"
            app:maskStyle="completable"/>

        <Button
            android:id="@+id/SalvarA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/botoaentrar"
            android:onClick="validarAnuncio"
            android:text="Cadastrar Item"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth"
            tools:ignore="OnClick" />

    </LinearLayout>
</ScrollView>
