<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Atividades.AdminActivity">

    <ListView
        android:id="@+id/listView_vistorias"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/codigoEspecialEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/codigoEspecialEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Insira o novo código especial"
        app:layout_constraintTop_toBottomOf="@+id/listView_vistorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text" />

    <Button
        android:id="@+id/updateCodigoEspecialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar código especial"
        app:layout_constraintTop_toBottomOf="@+id/codigoEspecialEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/edit_company_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar informações da empresa"
        app:layout_constraintTop_toBottomOf="@+id/updateCodigoEspecialButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
